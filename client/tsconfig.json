/**
 * TypeScript configuration for the client React application.
 * Configures JSX handling and path aliases.
 */
{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "noEmit": true
  },
  "include": ["src"],
  "references": [{ "path": "../shared" }]
}
